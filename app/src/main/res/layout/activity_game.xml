<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.GameActivity">

    <Button
            android:layout_width="57dp"
            android:layout_height="61dp" android:id="@+id/answer4"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="50dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="90dp"/>
    <Button
            android:layout_width="57dp"
            android:layout_height="61dp" android:id="@+id/answer5"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="90dp"/>
    <Button
            android:layout_width="57dp"
            android:layout_height="61dp" android:id="@+id/answer6"
            android:layout_marginEnd="50dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="90dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/leftNumber"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="75dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="120dp" android:textSize="36sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/operation"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="120dp"
            android:textSize="36sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="196dp"
            android:layout_marginEnd="197dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/rightNumber"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="75dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="120dp" android:textSize="36sp"/>
    <TextView
            android:text="@string/equals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            android:layout_marginTop="136dp"
            app:layout_constraintTop_toBottomOf="@+id/operation"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="176dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="176dp" android:textSize="36sp"/>
    <Button
            android:layout_width="58dp"
            android:layout_height="60dp" android:id="@+id/answer1"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="50dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="208dp"/>
    <Button
            android:layout_width="57dp"
            android:layout_height="61dp" android:id="@+id/answer3"
            android:layout_marginEnd="50dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="208dp"/>
    <Button
            android:layout_width="57dp"
            android:layout_height="61dp" android:id="@+id/answer2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="208dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/menuButton"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp" android:layout_marginEnd="25dp" app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/menu_button"/>
</androidx.constraintlayout.widget.ConstraintLayout>